
<% layout('layouts/boilerplate')%>
<div>
    <h1> Add new campground</h1>
</div>
      <form action="/campgrounds" method="POST" >
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" required>

        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" required>

        </div>
        <div>
            <label for="image">Image URL</label>
            <input type="text" id="image" name="campground[image]" required>

        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" id="description" name="campground[description]" required>

        </div>
        <div>
            <label for="price">Price</label>
            <input type="text" id="price" name="campground[price]" required>

        </div>
        <button type="submit">Add campground</button>

       

      </form>
      <a href="/campgrounds/">all campgrounds</a>
        
     